<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@drawable/border_image"
                android:scaleType="fitCenter"

                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombrePaciente"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Nombre Apellido"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/docuPaciente"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Documento"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/grpSang"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Grupo sangíneo:"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fecNac"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Fecha de nacimiento:"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/datosPaciente"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/fondoBoton"
                    android:padding="5dp"
                    android:text="Ver todos los datos"
                    android:onClick="verDatosPaciente" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/patolPaciente"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:background="#CCCCCC"
            android:gravity="center|top"
            android:text="Patologias"
            android:textSize="14dp" />


        <Button
            android:id="@+id/btnPatolPaciente"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/fondoBoton"
            android:onClick="verPatologias"
            android:text="Ver todas las patologías"
            android:drawableLeft="@drawable/cruz2"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btntratamPaciente"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/fondoBoton"
            android:onClick="verTratamientos"
            android:text="Ver todos los tratamientos"
            android:drawableLeft="@drawable/pastilla2"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btnPersonasContacto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/fondoBoton"
            android:onClick="verPersonasDeContacto"
            android:text="Personas de contacto"
            android:drawableLeft="@drawable/persona2"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btnNuevaBusqueda"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/fondoBoton"
            android:drawableLeft="@drawable/magnify"
            android:onClick="nuevaBusqueda"
            android:paddingLeft="20dp"
            android:text="Nueva búsqueda de paciente" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>