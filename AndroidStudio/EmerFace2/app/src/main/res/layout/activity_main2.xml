<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:background="#332323"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"

            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Nombre Apellido"
                android:gravity="center"
                android:id="@+id/nombrePaciente"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Documento"
                android:gravity="center"
                android:id="@+id/docuPaciente"
                android:textSize="12dp"/>
            <Button
                android:text="Ver todos los datos"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/datosPaciente"
                android:background="@color/fondoBoton"
                android:layout_margin="5dp"
                android:padding="5dp"
                />
        </LinearLayout>

    </LinearLayout>
        <TextView
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:text="Patologias"
            android:gravity="center"
            android:id="@+id/patolPaciente"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:text="Ver todas las patologías"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnPatolPaciente"
            android:background="@color/fondoBoton"
            android:layout_margin="5dp"
            />

        <Button
            android:text="Ver todos los tratamientos"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btntratamPaciente"
            android:background="@color/fondoBoton"
            android:layout_margin="5dp"
            />

        <Button
            android:text="Personas de contacto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnPersonasContacto"
            android:background="@color/fondoBoton"
            android:layout_margin="5dp"
            />

        <Button
            android:text="Nueva búsqueda"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnNuevaBusqueda"
            android:background="@color/fondoBoton"
            android:layout_margin="5dp"
            android:onClick="nuevaBusqueda"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>